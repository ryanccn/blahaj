{
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "module": "esnext",
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "src",
    "incremental": true,
    "paths": {
      "~/*": ["*"]
    }
  }
}
