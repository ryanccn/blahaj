{
	"compilerOptions": {
		"strict": true,
		"downlevelIteration": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
